pipeline {
    agent any
    environment {
        IMAGE_NAME = 'vinay1314/java-cicd'
        IMAGE_TAG = 'latest'
        WAR_FILE = 'target/XYZtechnologies-1.0.war'
        LOCAL_WAR_FILE = 'xyz_tech.war'
    }
    stages {
        stage('Code Checkout') {
            steps {
                git 'https://github.com/vinay1314/sample-java-project.git'
            }
        }
        stage('Code Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Packaging') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh "cp ${WAR_FILE} ${LOCAL_WAR_FILE}"
                sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }
        stage('Push Docker Image') {
            steps {
                withDockerRegistry([credentialsId: 'dockerhub-cred', url: '']) {
                    sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
        stage('Deploy as Container') {
            steps {
                script {
                    // Stop and remove existing container if it exists
                    sh "docker stop xyzapp || true"
                    sh "docker rm xyzapp || true"
                }
                sh "docker run -itd -p 9090:9090 --name xyzapp ${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }
    }
}

